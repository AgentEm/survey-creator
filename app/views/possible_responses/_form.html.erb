<div class="form container">
  <%= form_for(@possible_response) do |f| %>
    <% if @possible_response.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@possible_response.errors.count, "error") %> prohibited this possible_response from being saved:</h2>

        <ul>
        <% @possible_response.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <%= f.label :value %><br>
      <%= f.text_field :value %>
    </div>
    <div class="field">
      <%= f.label :colour %><br>
      <%= f.select(:colour, [
      "l_yellow",
      "yellow",
      "l_orange",
      "orange",
      "l_limegreen",
      "limegreen",
      "l_forestgreen",
      "forestgreen",
      "teal",
      "tickitblue",
      "l_skyblue",
      "skyblue",
      "l_navyblue",
      "navyblue",
      "l_violet",
      "violet",
      "l_purple",
      "purple",
      "l_pink",
      "pink"
      ]) %>
      </div>
    <div class="field">
      <%= f.label :label %><br>
      <%= f.text_field :label %>
    </div>
    <div class="field">
      <%= f.label :icon_id, "icon_id" %><br>
      <%= f.text_field :icon_id %>
    </div>
    <%= f.hidden_field :question_id %>
    <div class="actions">
      <%= f.submit %>
    </div>
  <% end %>
</div>
