<p id="notice"><%= notice %></p>

<h1>TickiT Surveys</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Languages</th>
      <th>Category selector</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @surveys.each do |survey| %>
      <tr>
        <td><%= survey.name %></td>
        <td><%= survey.languages %></td>
        <td><%= survey.uses_category_selector %></td>
        <td><%= link_to 'View Survey', survey %></td>
        <td><%= link_to 'Edit', edit_survey_path(survey) %></td>
        <td><%= link_to 'Delete', survey, method: :delete, data: { confirm: 'Are you sure you want to delete this survey?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Survey', new_survey_path %>
